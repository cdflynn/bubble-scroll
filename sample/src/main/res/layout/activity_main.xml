<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <cdflynn.android.library.scroller.BubbleScroller
        android:id="@+id/bubble_scroller"
        android:layout_width="100dp"
        android:layout_alignParentEnd="true"
        android:layout_height="match_parent"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:bubbleScroller_highlightColor="@color/blue_light"
        app:bubbleScroller_textColor="@android:color/white"
        app:bubbleScroller_textSize="@dimen/text_size_small"/>
</RelativeLayout>
